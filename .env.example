# Application URLs
BASE_URL=https://your-app.com
API_BASE_URL=https://api.your-app.com

# Environment
NODE_ENV=development
TEST_ENVIRONMENT=local

# Browser Settings
HEADLESS=false
BROWSER_TIMEOUT=30000
PAGE_LOAD_TIMEOUT=30000
IMPLICIT_WAIT=5000

# Selenium Grid Configuration
SELENIUM_HUB_HOST=localhost
SELENIUM_HUB_PORT=4444
USE_SELENIUM_GRID=false

# Test Execution Settings
MAX_INSTANCES=3
PARALLEL_EXECUTION=true
LOG_LEVEL=info
RETRY_COUNT=2
SCREENSHOT_ON_FAILURE=true
VIDEO_RECORDING=false

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=testdb
DB_USER=testuser
DB_PASSWORD=testpass

# Redis Configuration (for session storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Testing
API_TIMEOUT=30000
API_RETRY_COUNT=3

# Reporting Configuration
ALLURE_RESULTS_DIR=./reports/allure-results
ALLURE_REPORT_DIR=./reports/allure-report
SCREENSHOTS_DIR=./screenshots
VIDEOS_DIR=./videos
REPORTS_DIR=./reports

# CI/CD Settings
CI=false
BUILD_NUMBER=
BRANCH_NAME=
COMMIT_SHA=

# Email Configuration
EMAIL_NOTIFICATIONS=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
QA_TEAM_EMAIL=qa-team@company.com

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#qa-team

# Security & Authentication
JWT_SECRET=your-jwt-secret-for-api-tests
API_KEY=your-api-key
ENCRYPTION_KEY=your-encryption-key

# Performance Testing
PERFORMANCE_TEST_URL=https://your-app.com
LOAD_TEST_USERS=10
LOAD_TEST_DURATION=60s
LOAD_TEST_RAMP_UP=30s

# Visual Regression Testing
VISUAL_THRESHOLD=0.2
BASELINE_DIR=./screenshots/baseline
ACTUAL_DIR=./screenshots/actual
DIFF_DIR=./screenshots/diff

# Mobile Testing Configuration
APPIUM_HOST=localhost
APPIUM_PORT=4723
ANDROID_DEVICE_NAME=Android Emulator
ANDROID_PLATFORM_VERSION=11.0
IOS_DEVICE_NAME=iPhone 14
IOS_PLATFORM_VERSION=16.0

# Cloud Testing (BrowserStack/Sauce Labs)
BROWSERSTACK_USERNAME=
BROWSERSTACK_ACCESS_KEY=
SAUCE_USERNAME=
SAUCE_ACCESS_KEY=

# File Upload/Download Testing
UPLOAD_FILE_PATH=./fixtures/files/
DOWNLOAD_FILE_PATH=./downloads/

# Test Data Configuration
TEST_DATA_SOURCE=json # json, csv, excel, database
TEST_DATA_PATH=./src/data/
GENERATE_TEST_DATA=true

# Accessibility Testing
A11Y_STANDARDS=WCAG2AA
A11Y_TAGS=wcag2a,wcag2aa,wcag21aa

# Debug and Development
DEBUG=false
VERBOSE_LOGGING=false
SAVE_CONSOLE_LOGS=true
BROWSER_LOGS=true

# Timeouts (in milliseconds)
ELEMENT_TIMEOUT=10000
PAGE_LOAD_TIMEOUT=30000
SCRIPT_TIMEOUT=30000
ASYNC_SCRIPT_TIMEOUT=30000

# Network Configuration
NETWORK_CONDITIONS=none # none, slow3g, fast3g, offline
NETWORK_THROTTLING=false

# Proxy Configuration
USE_PROXY=false
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# Test Filtering
TEST_TAGS=
EXCLUDE_TAGS=
TEST_SUITE=all

# Feature Flags for Framework Features
ENABLE_VIDEO_RECORDING=false
ENABLE_NETWORK_LOGS=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_CUSTOM_COMMANDS=true
ENABLE_AUTO_WAIT=true

# Container Configuration
CONTAINER_MEMORY=2g
CONTAINER_SHM_SIZE=2g
CONTAINER_NETWORK=test-network

# Monitoring and Metrics
ENABLE_METRICS=false
METRICS_ENDPOINT=http://localhost:8080/metrics
HEALTH_CHECK_URL=http://localhost:3000/health